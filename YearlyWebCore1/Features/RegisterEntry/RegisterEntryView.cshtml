@model YearlyWebCore1.Features.RegisterEntry.RegisterEntryModel
@{
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("SubmitRegisterEntry", "RegisterEntry", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.SubTitle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DateString, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateString, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateString, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegisterValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!-- On numeric input: https://www.filamentgroup.com/lab/type-number.html -->
                @Html.EditorFor(model => model.RegisterValue, new { htmlAttributes = new { @class = "form-control", @type = "number", @pattern = "[0-9]*", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.RegisterValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.Action" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tillbaka", "Index", "Home")
</div>

