<Window x:Class="Yearly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yearly"
        mc:Ignorable="d"
        Title="Periodizer" Height="350" Width="525">
    <StackPanel
        Orientation="Horizontal">
        <StackPanel>
            <TextBlock>Copy some rows of dates and values and paste here:</TextBlock>
            <TextBox
                MinLines="20"
                AcceptsReturn="True"
                AcceptsTab="True"
                x:Name="tbSource"/>
        </StackPanel>
        
        <Button
            Height="90"
            Margin="10"
            Padding="6"
            Content="Periodize" Click="ButtonClick"/>
        
        <StackPanel>
            <TextBlock>The periodized result:</TextBlock>
            <TextBox
                x:Name="tbResult"
                MinLines="20"/>
        </StackPanel>
    </StackPanel>
</Window>
